#! /bin/sh

usage() {
	echo "Usage:"
	echo "    $0 (-l|--list|-v|--view|-h|--help)"
}

if [ $# -eq 0 ]
then
	usage
	exit 1
fi

if [ $# -eq 1 ]
then
	case $1 in
		-l|--list)
			echo "Content-Type: application/json"
			echo ""
			echo -n "["
			for path in `ls /usr/share/tiva/proposals`
			do
				[ -f "/usr/share/tiva/proposals/$path" ] && echo -n "\"$path\","
			done
			echo "\b]"
			exit 0
		;;
		-v|--view)
			echo "Content-Type: text/html"
			echo ""
			echo ""
			exit 0
		;;
		-h|--help)
			usage
			exit 0
		;;
		*)
			usage
			exit 1
		;;
	esac
fi
